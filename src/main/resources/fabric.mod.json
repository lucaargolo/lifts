{
  "schemaVersion": 1,
  "id": "lifts",
  "version": "${version}",
  "name": "Lifts",
  "description": "A technology mod that adds various lifts for better vertical traversal inside your world.",
  "authors": [
    "D4rkness_King"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/lifts",
    "sources": "https://github.com/lucaargolo/lifts",
    "issues": "https://github.com/lucaargolo/lifts/issues"
  },

  "license": "Mozilla Public License 2.0",
  "icon": "assets/lifts/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "io.github.lucaargolo.lifts.client.LiftsClient"
    ],
    "main": [
      "io.github.lucaargolo.lifts.Lifts"
    ]
  },
  "custom": {
    "dashloader:customobject": [
      "io.github.lucaargolo.lifts.compat.DashElectricLiftBakedModel",
      "io.github.lucaargolo.lifts.compat.DashScreenBakedModel"
    ]
  },
  "mixins": [
    "lifts.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": ">=0.34.5",
    "fabric-language-kotlin": ">=1.5.0",
    "minecraft": "1.17.x"
  }
}
